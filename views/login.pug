extends layouts/main.pug

block content
  .container.login__container
    .card.form__container
      .card-header
        h3.panel-title Sign In
      .card-body
        form(action="", method="post")
          .form-group.mb-2
            label.pt-2.pb-2 Username or Email
            input.form-control(type="text", placeholder="john@gmail.com", required="")
          .form-group
            label.pt-2.pb-2 Password
            input.form-control(type="password", placeholder="******", required="")
      .card-footer
        .form-group.d-flex.justify-content-between
            div
              button.btn.btn-primary.mr-2(type="submit") Login
              a.btn.btn-success(href="/auth/register") Register
            a.btn.btn-default(href="/auth/forgot-password") Forgot password