extends layouts/main.pug

block content
  .container.login__container
    form.card.form__container(action="/auth/login", method="post")
      .card-header
        h3.panel-title Sign In
      .card-body
          .form-group.mb-2
            label.pt-2.pb-2 Username or Email
            input.form-control(type="text", placeholder="john@gmail.com", name="username", value= form ? form.username : '')
          .form-group
            label.pt-2.pb-2 Password
            input.form-control(type="password", placeholder="******", name="password")
      .card-footer
        .form-group.d-flex.justify-content-between
            div
              button.btn.btn-primary.mr-2(type="submit") Login
              a.btn.btn-success(href="/auth/register") Register
            a.btn.btn-default(href="/auth/forgot-password") Forgot password
        .form-group.mt-2
          ul
            each error in errors
              li #{error.msg}