extends layouts/main.pug

block content
  .container.login__container
    form.card.form__container(action="", method="post")
      .card-header
        h3.panel-title Sign Up
      .card-body
          .form-group.mb-2
            label.pt-2.pb-2 Username
            input.form-control(type="text", placeholder="patterson", required="" name="username", value=form ? form.username : '')

          .form-group.mb-2
            label.pt-2.pb-2 Email
            input.form-control(type="email", placeholder="john@gmail.com", required="" name="email", value=form ? form.email : '')
          .form-group
            label.pt-2.pb-2 Password
            input.form-control(type="password", placeholder="******", required="" name="password")
          .form-group
            label.pt-2.pb-2 Confirm Password
            input.form-control(type="password", placeholder="******", required="" name="cpassword")
      .card-footer
        .form-group.d-flex.justify-content-between
            div
              button.btn.btn-success.mr-2(type="submit") Register
              a.btn.btn-primary(href="/auth/login") Login
            